<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jddz.cameralibrary" >
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.jddz.cameralibrary.activity.CameraActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name="com.jddz.cameralibrary.activity.ImageActivity" android:screenOrientation="landscape"></activity>
    </application>
</manifest>
